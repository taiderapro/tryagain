
name: Deploy na Azure

on:
  push:
    branches:
      - main  # Roda o deploy sempre que houver um push na branch main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout do código
        uses: actions/checkout@v3

      - name: Configurar Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 18

      - name: Instalar dependências Backend
        run: |
          cd projeto_integrado/app/backend
          npm install
          npm run build  # Se necessário

      - name: Instalar dependências Frontend
        run: |
          cd projeto_integrado/app/frontend
          npm install
          npm run build

      - name: Login na Azure
        uses: azure/login@v1
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Deploy do Backend na Azure
        uses: azure/webapps-deploy@v2
        with:
          app-name: "NOME_DO_SEU_BACKEND"
          package: projeto_integrado/app/backend

      - name: Deploy do Frontend na Azure
        uses: azure/webapps-deploy@v2
        with:
          app-name: "NOME_DO_SEU_FRONTEND"
          package: projeto_integrado/app/frontend
